<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow">
    <title>{% if title %}{{ title }} - {% endif %}Sofia's Blog</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #FFFCF5;
            font-family: 'Crimson Text', serif;
            font-size: 19px;
            line-height: 1.65;
            color: #000;
            padding: 50px 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        header {
            margin-bottom: 50px;
            text-align: center;
        }

        header h1 {
            font-size: 42px;
            font-weight: 600;
            margin-bottom: 12px;
        }

        header h1 a {
            color: #000;
            text-decoration: none;
        }

        header h1 a:hover {
            text-decoration: underline;
        }

        nav {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 13px;
            color: #666;
        }

        nav a {
            color: #666;
            text-decoration: none;
        }

        nav a:hover {
            color: #000;
        }

        nav span {
            margin: 0 8px;
            color: #ccc;
        }

        /* Homepage post list */
        .post-list {
            text-align: center;
        }

        .post-list article {
            margin-bottom: 32px;
        }

        .post-list h2 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 6px;
        }

        .post-list h2 a {
            color: #000;
            text-decoration: none;
        }

        .post-list h2 a:hover {
            text-decoration: underline;
        }

        .post-list .date {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 13px;
            color: #666;
        }

        /* Individual post page */
        .post-header {
            text-align: center;
            margin-bottom: 35px;
        }

        .post-header h2 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .post-header .date {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 13px;
            color: #666;
        }

        .post-content {
            text-align: left;
        }

        .post-content p {
            margin-bottom: 22px;
        }

        .post-content strong {
            font-weight: 600;
        }

        .post-content em {
            font-style: italic;
        }

        .post-content h3 {
            font-size: 24px;
            font-weight: 600;
            margin-top: 35px;
            margin-bottom: 15px;
        }

        .post-content ul, .post-content ol {
            margin-bottom: 22px;
            padding-left: 25px;
        }

        .post-content li {
            margin-bottom: 8px;
        }

        .post-content blockquote {
            border-left: 3px solid #ddd;
            padding-left: 20px;
            margin: 25px 0;
            font-style: italic;
            color: #555;
        }

        .post-content a {
            color: #000;
        }

        .post-content a:hover {
            text-decoration: none;
        }

        .back-link {
            margin-top: 50px;
            text-align: center;
            font-family: 'IBM Plex Mono', monospace;
            font-size: 13px;
        }

        .back-link a {
            color: #666;
            text-decoration: none;
        }

        .back-link a:hover {
            color: #000;
        }

        /* Static pages (about, library, projects) */
        .page-content {
            text-align: left;
        }

        .page-content p {
            margin-bottom: 22px;
        }

        .page-content h2 {
            font-size: 24px;
            font-weight: 600;
            margin-top: 45px;
            margin-bottom: 15px;
        }

        .page-content ul, .page-content ol {
            margin-bottom: 22px;
            padding-left: 25px;
        }

        .page-content li {
            margin-bottom: 8px;
        }

        .page-content a {
            color: #000;
        }

        .page-content a:hover {
            text-decoration: none;
        }

        .page-title {
            text-align: center;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 35px;
        }

        /* Password protection overlay */
        .password-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #FFFCF5;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .password-box {
            text-align: center;
        }

        .password-box h1 {
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .password-box input {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 14px;
            padding: 10px 15px;
            border: 1px solid #ccc;
            background: #fff;
            width: 200px;
            margin-bottom: 10px;
        }

        .password-box button {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 13px;
            padding: 10px 20px;
            background: #000;
            color: #fff;
            border: none;
            cursor: pointer;
            margin-left: 5px;
        }

        .password-box button:hover {
            background: #333;
        }

        .password-box .error {
            color: #c00;
            font-size: 13px;
            margin-top: 10px;
            font-family: 'IBM Plex Mono', monospace;
        }

        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <script>
        // ========== PASSWORD SETTINGS ==========
        const passwordProtected = true;  // Change to false to disable password
        const password = "sbf2022";  // Change this to your password
        // =======================================

        if (passwordProtected) {
            const stored = sessionStorage.getItem('blogAccess');
            if (stored !== 'granted') {
                document.body.innerHTML = `
                    <div class="password-overlay">
                        <div class="password-box">
                            <h1>Sofia's Blog</h1>
                            <div>
                                <input type="password" id="passwordInput" placeholder="Enter password" onkeypress="if(event.key==='Enter')checkPassword()">
                                <button onclick="checkPassword()">Enter</button>
                            </div>
                            <div class="error hidden" id="errorMsg">Incorrect password</div>
                        </div>
                    </div>
                `;
            }
        }

        function checkPassword() {
            const input = document.getElementById('passwordInput').value;
            if (input === password) {
                sessionStorage.setItem('blogAccess', 'granted');
                location.reload();
            } else {
                document.getElementById('errorMsg').classList.remove('hidden');
            }
        }
    </script>

    <div class="container">
        <header>
            <h1><a href="/">Sofia's Blog</a></h1>
            <nav>
                <a href="/about/">about</a><span>/</span><a href="/library/">library</a><span>/</span><a href="/projects/">projects</a>
            </nav>
        </header>

        <main>
            {{ content | safe }}
        </main>
    </div>
</body>
</html>
